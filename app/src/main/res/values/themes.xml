<resources>
    <!-- Base application theme. -->
    <style name="Theme.internship" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_purple</item>
        <item name="colorPrimaryVariant">@color/main_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_purple</item>
        <item name="colorSecondaryVariant">@color/main_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:editTextColor">@color/dark_purple</item>

    </style>

    <style name="SearchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginLeft">@dimen/margin_20</item>
        <item name="android:layout_marginRight">@dimen/margin_20</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="round">@dimen/shape_radius</item>
        <item name="android:searchIcon">@drawable/ic_search</item>
        <item name="android:closeIcon">@drawable/ic_clear</item>
        <item name="android:searchHintIcon">@drawable/ic_search</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:background">@drawable/search_rounded_background</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="BorderButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/border_btn_back</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="Button"  parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/background</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddTaskHint" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/margin_30</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:textColor">@color/add_task_hint</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="EditText">
        <item name = "android:background">@android:color/transparent</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/radio_btn_text_color</item>
        <item name="android:button">@drawable/radio_btn_drawable</item>
    </style>
</resources>