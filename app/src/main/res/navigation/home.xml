<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/linearDADFragment">

    <fragment
        android:id="@+id/gridDADFragment"
        android:name="com.onix.internship.ui.grid.GridDADFragment"
        android:label="GridDADFragment">

        <action
            android:id="@+id/action_gridDADFragment_to_linearDADFragment"
            app:destination="@id/linearDADFragment"
            app:popUpTo="@id/linearDADFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/linearDADFragment"
        android:name="com.onix.internship.ui.linear.LinearDADFragment"
        android:label="LinearDADFragment">

        <action
            android:id="@+id/action_linearDADFragment_to_gridDADFragment"
            app:destination="@id/gridDADFragment"
            app:popUpTo="@id/gridDADFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>