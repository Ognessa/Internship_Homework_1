<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.onix.internship.ui.mainFragment.MainMenuFragment"
        android:label="MainMenuFragment" >

        <action
            android:id="@+id/action_mainMenuFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_helpFragment"
            app:destination="@id/helpFragment" />

    </fragment>

    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.onix.internship.ui.addNote.AddNoteFragment"
        android:label="AddNoteFragment" >

        <argument
            android:name="fragmentState"
            app:argType="com.onix.internship.objects.AddNoteFragmentStates" />

        <argument
            android:name="editItemId"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.onix.internship.ui.help.HelpFragment"
        android:label="HelpFragment" />

</navigation>