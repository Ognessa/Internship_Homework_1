<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_menu"
    app:startDestination="@id/mapFragment">


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.onix.internship.ui.map.MapFragment"
        android:label="MapFragment">

        <action
            android:id="@+id/action_mapFragment_to_pointsFragment"
            app:destination="@id/pointsFragment" />

    </fragment>

    <fragment
        android:id="@+id/pointsFragment"
        android:name="com.onix.internship.ui.points.PointsFragment"
        android:label="PointsFragment">

        <action
            android:id="@+id/action_pointsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.onix.internship.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />

</navigation>