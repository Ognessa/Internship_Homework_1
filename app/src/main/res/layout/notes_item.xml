<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="noteData"
            type="com.onix.internship.objects.NotesData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/note_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hide_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:src="@{noteData.notesState ? @drawable/ic_hide : @drawable/ic_show}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/hide_description" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:src="@drawable/ic_edit"
            android:visibility="@{noteData.isEditable &amp; noteData.notesState ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/edit_note_description" />

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_5"
            noteColor="@{noteData.color}"
            app:layout_constraintEnd_toStartOf="@+id/iv_hide_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{noteData.title}"/>

        <TextView
            android:id="@+id/tv_note_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="@{noteData.description}"
            android:visibility="@{noteData.notesState ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="@+id/tv_note_title"
            app:layout_constraintStart_toStartOf="@+id/tv_note_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_note_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>