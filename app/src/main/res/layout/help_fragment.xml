<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.help.HelpFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            app:title="@string/help_menu"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter"
            android:layout_marginEnd="@dimen/margin_22"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <TextView
            android:id="@+id/tv_collapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/collapsed_notes_title"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show"
            android:layout_marginEnd="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="@+id/tv_collapsed"
            app:layout_constraintTop_toTopOf="@+id/tv_collapsed" />


        <TextView
            android:id="@+id/tv_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/expanded_notes_title"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@+id/tv_collapsed"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:id="@+id/tv_expanded_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/content_of_notes"
            app:layout_constraintTop_toBottomOf="@+id/tv_expanded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hide"
            android:layout_marginEnd="@dimen/margin_5"
            app:layout_constraintEnd_toEndOf="@+id/tv_expanded"
            app:layout_constraintTop_toTopOf="@+id/tv_expanded" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/title"
            android:textColor="@color/pink"
            app:layout_constraintTop_toBottomOf="@+id/tv_expanded_content" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:src="@drawable/ic_hide"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/content_of_notes"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/editable_expanded_notes"
            android:textColor="@color/green"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_content" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:src="@drawable/ic_show"
            app:layout_constraintEnd_toEndOf="@+id/tv_editable"
            app:layout_constraintTop_toTopOf="@+id/tv_editable" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@+id/tv_editable"
            app:layout_constraintEnd_toEndOf="@+id/tv_editable" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_margin="@dimen/margin_5"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/add_note_description" />

        <TextView
            android:id="@+id/textView3"
            style="@style/UpHintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/sort_notes"
            app:layout_constraintEnd_toEndOf="@+id/iv_filter"
            app:layout_constraintTop_toTopOf="@+id/iv_filter" />

        <TextView
            style="@style/UpHintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/swipe_to_delete"
            app:layout_constraintEnd_toEndOf="@+id/tv_expanded_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_expanded" />

        <TextView
            android:id="@+id/textView2"
            style="@style/UpHintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/expand_content"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            style="@style/UpHintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="@string/edit_notes"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            style="@style/DownHintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_22"
            android:text="@string/add_notes"
            app:layout_constraintBottom_toTopOf="@+id/fab_add_note"
            app:layout_constraintEnd_toEndOf="@+id/fab_add_note" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>