<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tictactoe.TicTacToeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/title_text_size"
        android:text="@string/app_name"/>

    <com.onix.internship.ui.tictactoe.TicTacToeView
        android:id="@+id/tic_tac_toe_view"
        android:layout_width="@dimen/tic_tac_toe_size"
        android:layout_height="@dimen/tic_tac_toe_size"
        android:layout_gravity="center" />

</FrameLayout>
</layout>