<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pause.PauseFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@color/black_translucent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_menu_back" />

    <TextView
        android:id="@+id/textView"
        style="@style/TitleText"
        android:text="Menu"
        android:textColor="@color/yellow"
        android:paddingLeft="@dimen/padding_30"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_40"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_Continue"
            style="@style/MenuButton"
            android:text="@string/continue_menu_item_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_restart"
            style="@style/MenuButton"
            android:text="@string/restart_menu_item_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_quit"
            style="@style/MenuButton"
            android:text="@string/quit_menu_item_text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sound"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_volume_on" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>