<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.onix.internship.objects.local.MemeData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/meme_card_width"
            android:layout_height="@dimen/meme_card_height"
            android:layout_margin="@dimen/margin_5"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                imageUrl="@{data.image}"/>

            <com.onix.internship.ui.view.OutlineTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:gravity="center"
                android:textColor="@color/white"
                app:outlineColor="@color/black"
                app:outlineWidth="@dimen/text_outline_width"
                android:text="@{data.topText}" />

            <com.onix.internship.ui.view.OutlineTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:gravity="center"
                android:textColor="@color/white"
                app:outlineColor="@color/black"
                app:outlineWidth="@dimen/text_outline_width"
                android:layout_gravity="bottom"
                android:text="@{data.bottomText}" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>