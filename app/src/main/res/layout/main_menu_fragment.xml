<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.onix.internship.R"/>

        <variable
            name="viewModel"
            type="com.onix.internship.ui.mainMenu.MainMenuViewModel" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_5"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ui.mainMenu.MainMenuFragment">

        <ImageView
            android:id="@+id/iv_animation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/start_animation_height"
            gifImage="@{R.drawable.mimifo}"/>

        <Button
            android:id="@+id/btn_gallery_import"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{_ -> viewModel.galleryImport()}"
            android:text="@string/import_from_gallery"/>

        <Button
            android:id="@+id/btn_camera_import"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{_ -> viewModel.cameraImport()}"
            android:text="@string/import_from_camera"/>

    </LinearLayout>
</layout>