<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.onix.internship.entity.SensorSubType" />

        <variable
            name="cardsItem"
            type="com.onix.internship.entity.DeviceData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Media -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/card_item_img"
                    deviceValue="@{cardsItem.value}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_view_image_size"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/card_item_text_room"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/card_item_text_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_14dp"
                    android:layout_marginTop="@dimen/margin_14dp"
                    android:text="@{String.valueOf(`Room: `  + cardsItem.room)}"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintBottom_toTopOf="@id/card_item_text_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_img" />

                <TextView
                    android:id="@+id/card_item_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_14dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@{String.valueOf(`Type: `  + cardsItem.type)}"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintBottom_toTopOf="@id/card_item_text_sub_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_text_room" />

                <TextView
                    android:id="@+id/card_item_text_sub_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_14dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="@{String.valueOf(`Subtype: `  + cardsItem.subType)}"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintBottom_toTopOf="@id/card_item_text_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_text_type" />

                <TextView
                    android:id="@+id/card_item_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_14dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="@{String.valueOf(`Value: `  + cardsItem.value)}"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    android:visibility="@{cardsItem.subType == SensorSubType.ONETIME ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toTopOf="@+id/deleteSensorButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_text_sub_type" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteSensorButton"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_item_text_value" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>